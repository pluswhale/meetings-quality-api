  "info": {
    "title": "Meetings Quality API",
    "description": "API для платформы отслеживания качества встреч",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "auth",
      "description": "Аутентификация и авторизация"
    },
    {
      "name": "users",
      "description": "Управление пользователями"
    },
    {
      "name": "meetings",
      "description": "Управление встречами"
    },
    {
      "name": "tasks",
      "description": "Управление задачами"
    }
  ],
  "servers": [],
  "components": {
    "securitySchemes": {
      "JWT-auth": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "JWT",
        "description": "Enter JWT token",
        "in": "header"
      }
    },
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "description": "Полное имя пользователя",
            "example": "Иван Иванов"
          },
          "email": {
            "type": "string",
            "description": "Email пользователя",
            "example": "ivan@example.com"
          },
          "password": {
            "type": "string",
            "description": "Пароль (минимум 6 символов)",
            "example": "password123",
            "minLength": 6
          }
        },
        "required": [
          "fullName",
          "email",
          "password"
        ]
      },
      "UserResponseDto": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "fullName": {
            "type": "string",
            "example": "Иван Иванов"
          },
          "email": {
            "type": "string",
            "example": "ivan@example.com"
          }
        },
        "required": [
          "_id",
          "fullName",
          "email"
        ]
      },
      "AuthResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "user": {
            "$ref": "#/components/schemas/UserResponseDto"
          }
        },
        "required": [
          "access_token",
          "user"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email пользователя",
            "example": "ivan@example.com"
          },
          "password": {
            "type": "string",
            "description": "Пароль пользователя",
            "example": "password123"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CreateMeetingDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Название встречи",
            "example": "Обсуждение нового проекта"
          },
          "question": {
            "type": "string",
            "description": "Вопрос для обсуждения",
            "example": "Какие технологии использовать для нового проекта?"
          },
          "participantIds": {
            "description": "ID участников встречи",
            "example": [
              "507f1f77bcf86cd799439011",
              "507f1f77bcf86cd799439012"
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "title",
          "question"
        ]
      },
      "MeetingResponseDto": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439020"
          },
          "title": {
            "type": "string",
            "example": "Обсуждение нового проекта"
          },
          "question": {
            "type": "string",
            "example": "Какие технологии использовать?"
          },
          "creatorId": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "participantIds": {
            "example": [
              "507f1f77bcf86cd799439011",
              "507f1f77bcf86cd799439012"
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "currentPhase": {
            "type": "string",
            "enum": [
              "discussion",
              "evaluation",
              "summary",
              "finished"
            ],
            "example": "discussion"
          },
          "status": {
            "type": "string",
            "enum": [
              "upcoming",
              "active",
